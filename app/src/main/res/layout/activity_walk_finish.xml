<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">

        <Button
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/arrow_back"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="산책 종료"
            android:textColor="@color/bold"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:fontFamily="@font/pretendard_semibold"/>
    </FrameLayout>


    <!-- 내용 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="홍길동님은 오늘,"
        android:textSize="24dp"
        android:textColor="@color/bold"
        android:fontFamily="@font/pretendard_semibold"
        android:letterSpacing="-0.025"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp"/>

    <!-- 시간 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:src="@drawable/walk_finish_box"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="00:12:34"
            android:textColor="@color/theme2"
            android:textSize="36dp"
            android:fontFamily="@font/pretendard_semibold"
            android:letterSpacing="0.025"
            android:layout_gravity="center"
            android:gravity="center"/>
    </FrameLayout>

    <!-- 걸음수, 걸은거리, 소모열량 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="12dp">

        <!-- 박스 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/walk_finish_box"
                android:layout_weight="2"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/walk_finish_box"
                android:layout_weight="2"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/walk_finish_box"
                android:layout_weight="2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:layout_weight="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="걸음 수"
                    android:textSize="14dp"
                    android:textColor="@color/basic1"
                    android:fontFamily="@font/pretendard_medium"
                    android:letterSpacing="-0.025"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:text="1,234"
                    android:textSize="24dp"
                    android:textColor="@color/theme2"
                    android:fontFamily="@font/pretendard_semibold"
                    android:letterSpacing="-0.025"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:text="걸음"
                    android:textSize="14dp"
                    android:textColor="@color/basic2"
                    android:fontFamily="@font/pretendard_medium"
                    android:letterSpacing="-0.025"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"/>

            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:layout_weight="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="걸은 거리"
                    android:textSize="14dp"
                    android:textColor="@color/basic1"
                    android:fontFamily="@font/pretendard_medium"
                    android:letterSpacing="-0.025"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:text="3.7"
                    android:textSize="24dp"
                    android:textColor="@color/theme2"
                    android:fontFamily="@font/pretendard_semibold"
                    android:letterSpacing="-0.025"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:text="km"
                    android:textSize="14dp"
                    android:textColor="@color/basic2"
                    android:fontFamily="@font/pretendard_medium"
                    android:letterSpacing="-0.025"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"/>

            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:layout_weight="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="소모 열량"
                    android:textSize="14dp"
                    android:textColor="@color/basic1"
                    android:fontFamily="@font/pretendard_medium"
                    android:letterSpacing="-0.025"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:text="131"
                    android:textSize="24dp"
                    android:textColor="@color/theme2"
                    android:fontFamily="@font/pretendard_semibold"
                    android:letterSpacing="-0.025"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:text="kcal"
                    android:textSize="14dp"
                    android:textColor="@color/basic2"
                    android:fontFamily="@font/pretendard_medium"
                    android:letterSpacing="-0.025"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="만큼 운동하셨어요!"
        android:textSize="24dp"
        android:textColor="@color/bold"
        android:fontFamily="@font/pretendard_semibold"
        android:letterSpacing="-0.025"
        android:layout_marginTop="12dp"
        android:layout_gravity="right"
        android:layout_marginRight="24dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:src="@color/line"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="48dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="산책 경로"
            android:textSize="20dp"
            android:textColor="@color/bold"
            android:fontFamily="@font/pretendard_semibold"
            android:letterSpacing="-0.025"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="24dp"/>

        <!-- 여기에 산책경로 -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/walk_bg_box"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="16dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/register3buttonfront"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="확인"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:background="@color/theme2"
            android:fontFamily="@font/pretendard_semibold"
            />
    </LinearLayout>
</LinearLayout>