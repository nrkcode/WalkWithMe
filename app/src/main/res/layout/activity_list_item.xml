<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/list_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/img_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <!-- 리스트 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="12dp">


            <!-- 리스트1 이름 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/nameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:text="이름장소"
                        android:textSize="16dp"
                        android:textColor="@color/basic1"
                        android:fontFamily="@font/pretendard_semibold"
                        android:letterSpacing="-0.025"
                        />

                    <TextView
                        android:id="@+id/categoryTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:textSize="12dp"
                        android:text="공언"
                        android:textColor="@color/basic2"
                        android:fontFamily="@font/pretendard_regular"
                        android:letterSpacing="-0.025"
                        android:layout_marginLeft="6dp"/>

                </LinearLayout>

                <!-- 추천 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="추천"
                        android:textSize="12dp"
                        android:textColor="@color/theme2"
                        android:fontFamily="@font/pretendard_regular"
                        android:letterSpacing="-0.025"
                        android:layout_gravity="center_vertical"/>

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/thumb_up"
                        android:layout_marginLeft="2dp"
                        android:layout_gravity="center_vertical"
                        app:tint="@color/theme2"
                        />

                </LinearLayout>
            </LinearLayout>

            <!-- 리스트1 주소 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/pin_drop"
                    app:tint="@color/basic2"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/addressTextView"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:text="광주 북구 용봉동 77"
                    android:textSize="12dp"
                    android:textColor="@color/basic2"
                    android:layout_marginLeft="2dp"/>
            </LinearLayout>

            <!-- 리스트1 산책 세부기록 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/distanceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:text="1.5km"
                    android:textSize="12dp"
                    android:textColor="@color/basic1"
                    android:fontFamily="@font/pretendard_regular"
                    android:letterSpacing="-0.025"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/circle"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"/>

                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:text="30분"
                    android:textSize="12dp"
                    android:textColor="@color/basic1"
                    android:fontFamily="@font/pretendard_regular"
                    android:letterSpacing="-0.025"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/circle" />

                <TextView
                    android:id="@+id/txt_kcal"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:text="320kcal"
                    android:textSize="12dp"
                    android:textColor="@color/basic1"
                    android:fontFamily="@font/pretendard_regular"
                    android:letterSpacing="-0.025"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line"
        />
    <TextView
        android:id="@+id/longTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="12dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/latiTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="12dp"
        android:visibility="gone"/>
</LinearLayout>
